{
    "manifest_version": 2,
    "name": "KU | Search RateMyProfessors",
    "version": "1.0",

    "author": "James Mendel",
    "email": "jrm@ku.edu",
    "website": "https://people.ku.edu/~j116m376/",

    "description": "Updates professor link on classes.ku.edu to go directly to that professors RateMyProfessors page.",
    "icons": {
        "48": "icons/icon-96.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "ku-rmp@jamesmendel"
        }
    },
    "web_accessible_resources": ["ku-rm.js"],
    "content_scripts": [{
        "matches": [
            "http://classes.ku.edu/*",
            "https://classes.ku.edu/*"
        ],
        "js": [
            "app.js"
        ],
        "run_at": "document_end"
    }]
}